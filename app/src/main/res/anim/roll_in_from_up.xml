        android:duration="5000"
        android:fromXScale="1"
        android:fromYScale="0.5"
        android:pivotX="50%"
        android:pivotY="0%"
        android:toXScale="1"
        android:toYScale="1"
        />
    <translate
        android:duration="2000"
        android:fromYDelta="-50%"
        android:startOffset="3000"
        android:toYDelta="0%"
        />
